{
  "manifest_version": 3,
  "name": "Text Expander",
  "version": "1.0",
  "description": "Replaces shortcuts with predefined text snippets.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
